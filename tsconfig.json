{
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": false,
    "target": "es2017",
    "outDir": "lib",
    "baseUrl": "src",
    "declaration": true,
    "paths": {},
    "allowJs": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "tests", "lib"]
}
